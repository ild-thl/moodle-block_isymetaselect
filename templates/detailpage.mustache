  {{!
    @template block/ocmyproducts

    detalpage of ildmetaselect

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * url
    * teasertext
    * videocode
    * altpic
    * learninggoals
    * gliederung
    * alllecturers
    * allauthors
    * detailsmorelecturer
    * targetgroup
    * certificate
    * license
    * taglist
    * tagurlarray

    * coursetitle
    * edit_string
    * lecturer
    * uni
    * language
    * subject
    * processingtime
    * starttime
    * fileurl

    * is_enrolled
    * alllecturers_notempty
    * allauthors_notempty

    * lecturer_detail
    * provider_detail
    * courselanguages_detail
    * subjectarea_detail
    * avgworkload_detail
    * hours_detail
    * starttime_detail

    * free
    * enrol
    * tocourse

    * h_awaits
    * h_learn
    * h_outline
    * h_further_auth
    * h_target_group
    * h_confirmation
    * license

  }}

  <div class="metadetail-container">
	<div class="metadetail-header">
		<div class="metadetail-header-image metatile-img" style="background-image:url('{{fileurl}}');">
    {{^started}}
      <div class="icon-coming-soon"></div>
    {{/started}}
		</div>
		<div class="metadetail-header-infos">
			<h2>{{{coursetitle}}} {{{edit_string}}}</h2>
			<table>
				<tr>
					<td>{{{lecturer_detail}}}:</td>
					<td>{{{lecturer}}}</td>
				</tr>
				<tr>
					<td>{{{provider_detail}}}:</td>
					<td>{{{uni}}}</td>
          {{#showrecognition}}
          <td>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog" style="max-width: 800px">
                <div class="modal-content">
                  <div class="modal-header" style="color: black; display: flex; align-items: center;">
                    <div class="status-circle" style="background-color: {{statuscolor}}; width: 20px; height: 20px; border-radius: 50%; display: inline-block; margin-right: 10px;"></div>
                    <h4 class="modal-title" id="myModalLabel">{{#str}}recognitionstatus, block_ildmetaselect{{/str}}: {{coursetitle}}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  </div>
                  <div class="modal-body">
                    <p style="color: black;">{{statusdescription}}</p>
                    {{#hashistory}}
                    <h4 style="color: black;">{{#str}}recognitionhistory, block_ildmetaselect{{/str}}</h4>
                    <table class="table">
                      <thead>
                        <tr>
                          <th>{{#str}}hei, block_ildmetaselect{{/str}}</th>
                          <th>{{#str}}studyprogramme, block_ildmetaselect{{/str}}</th>
                          <th>{{#str}}module, block_ildmetaselect{{/str}}</th>
                          <th>{{#str}}status, block_ildmetaselect{{/str}}</th>
                          <th>{{#str}}credits, block_ildmetaselect{{/str}}</th>
                          <th>{{#str}}year, block_ildmetaselect{{/str}}</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#history}}
                        <tr>
                          <td>{{hei}}</td>
                          <td>{{studyprogramme}}</td>
                          <td>{{learningopportunity}}</td>
                          <td>{{statustext}}</td>
                          <td>{{credits}}</td>
                          <td>{{year}}</td>
                        </tr>
                        {{/history}}
                      </tbody>
                    </table>
                    {{/hashistory}}
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{#str}}close, block_ildmetaselect{{/str}}</button>
                    <a href="https://test.pim-plattform.de/pim/login.html" class="btn btn-primary">{{#str}}topim, block_ildmetaselect{{/str}}</a>
                  </div>
                </div>
              </div>
            </div>

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
              <span class="status-circle" style="background-color: {{statuscolor}}; width: 10px; height: 10px; border-radius: 50%; display: inline-block; margin-right: 5px;"></span>
              {{#str}}recognitionstatus, block_ildmetaselect{{/str}}
            </button>
          </td>
          {{/showrecognition}}
				</tr>
				<tr>
					<td>{{{courselanguage_detail}}}:</td>
					<td>{{language}}</td>
				</tr>
				<tr>
					<td>{{{subjectarea_detail}}}:</td>
					<td>{{subject}}</td>
          {{#started}}<td class="hide-small"><strong class="free">{{{free}}}</strong></td>{{/started}}
				</tr>
				<tr>
					<td>{{{avgworkload_detail}}}:</td>
					<td>{{processingtime}} {{{hours}}}</td>
					{{^started}}
          <td class="hide-small"><strong class="free">{{{free}}}</strong></td>
          {{/started}}

          {{#started}}
          <td class="hide-desktop"><strong class="free">{{{free}}}</strong></td>
					{{#is_enrolled}}
            <td class="hide-small"><a class="btn btn-sign" href="{{{url}}}">{{{tocourse}}}</a></td>
          {{/is_enrolled}}
          {{^is_enrolled}}
            <td class="hide-small"><a class="btn btn-sign" href="{{{url}}}">{{{enrol}}}</a></td>
          {{/is_enrolled}}
          {{/started}}

        </tr>
				{{^started}}
				<tr>

          <td>{{{starttime_detail}}}:</td>
					<td>{{starttime}}</td>
					<td class="hide-desktop"><strong class="free">{{{free}}}</strong></td>
					{{#is_enrolled}}
            <td class="hide-small"><a class="btn btn-sign" href="{{{url}}}">{{{tocourse}}}</a></td>
          {{/is_enrolled}}
          {{^is_enrolled}}
            <td class="hide-small"><a class="btn btn-sign" href="{{{url}}}">{{{enrol}}}</a></td>
          {{/is_enrolled}}
				</tr>
        {{/started}}
			</table>
		</div>
	</div>

	<div class="meta-share">
        <div class="meta-share-facebook"><a href="https://www.facebook.com/sharer/sharer.php?u={{{url}}}">{{# str}} metashare, block_ildmetaselect {{/ str}}</a></div>
		<div class="meta-share-twitter"><a href="https://twitter.com/intent/tweet?url={{{url}}}">{{# str}} metatweet, block_ildmetaselect {{/ str}}</a></div>
		<div class="meta-share-whatsapp"><a href="whatsapp://send?text={{{url}}}">{{# str}} metashare, block_ildmetaselect {{/ str}}</a></div>
		<div class="meta-share-linkedin"><a href="https://www.linkedin.com/shareArticle?mini=true&amp;summary=&amp;url={{{url}}}">{{# str}} metashare, block_ildmetaselect {{/ str}}</a></div>
		<div class="meta-share-xing"><a href="https://www.xing.com/social_plugins/share?url={{{url}}}">{{# str}} metashare, block_ildmetaselect {{/ str}}</a></div>
		<div class="meta-share-mail"><a href="mailto:?subject={{coursetitle}}&amp;body={{{url}}}">{{# str}} metashare, block_ildmetaselect {{/ str}}</a></div>
	</div>

	<div class="metadetail-body">

		<div class="md-teasertext">
    {{#teasertext}}
      <h2>{{{h_awaits}}}</h2>
      {{{teasertext}}}
    {{/teasertext}}
    </div>
		<div class="md-teaservideo">
    {{#videocode}}
      {{{videocode}}}
    {{/videocode}}
    {{^videocode}}
      <img src="{{altpic}}"></img>
    {{/videocode}}
    </div>
    {{#learninggoals}}
		<div class="md-learninggoals">
      <h2>{{{h_learn}}}</h2>
      {{{learninggoals}}}
    </div>
    {{/learninggoals}}
    {{#gliederung}}
		<div class="md-structure">
      <h2>{{{h_outline}}}</h2>
      {{{gliederung}}}
    </div>
    {{/gliederung}}
    {{#alllecturers_notempty}}
		<div class="md-lecturer">
    <h2>{{{lecturer_detail}}}</h2>
    {{/alllecturers_notempty}}
    {{#alllecturers}}
      <div class="lecturer_container"><div class="lecturer_imgcontainer {{class}}"><img src="{{img}}"/></div><div class="lecturer_text">{{{div}}}</div></div>
    </div>
    {{/alllecturers}}
    {{#allauthors_notempty}}
    <div class="md-lecturer">
      <h2>{{{h_further_auth}}}</h2>
    {{/allauthors_notempty}}
    {{#allauthors}}
      <div class="lecturer_container"><div class="lecturer_imgcontainer {{class}}"><img src="{{img}}"/></div><div class="lecturer_text">{{{div}}}</div></div>
    </div>
    {{/allauthors}}
    {{#detailsmorelecturer}}
		<div class="md-morelecturer">
      <h2>{{{h_further_auth}}}</h2>
      {{{detailsmorelecturer}}}
    </div>
    {{/detailsmorelecturer}}
    {{#targetgroup}}
		<div class="md-targetgroup">
      <h2>{{{h_target_group}}}</h2>
      {{{targetgroup}}}
    </div>
    {{/targetgroup}}
    {{#certificate}}
		<div class="md-certificateofachievement">
      <h2>{{{h_confirmation}}}</h2>
      {{{certificate}}}
    </div>
    {{/certificate}}
    {{#license}}
		<div class="md-license">
      <h2>{{{licensetitle}}}</h2>
      {{{license}}}
    </div>
    {{/license}}
    {{#taglist}}
		<div class="md-tags">
      <span class="metatag"><a href="{{url}}">{{tag}}</a></span>
    </div>
    {{/taglist}}
	</div>
</div>
