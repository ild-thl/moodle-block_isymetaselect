  {{!                                                                                                                                 
    @template block/ocmyproducts                                                                                                        

    
                                                                                                                                    
    Classes required for JS:                                                                                                        
    * none                                                                                                                        
                                                                                                                                    
    Data attributes required for JS:                                                                                                
    * none                                                                                                                
                                                                                                                                    
    Context variables required for this template:
    * url
    * fileurl
    * coursetitle
    * lecturer
    * uni
    * language
    * subject
    * processingtime
    * starttime

	* lecturer_detail
	* university_detail
	* courselanguages_detail
	* subjectarea_detail
	* avgworkload_detail
	* hours_detail
	* starttime_detail
                                                                                                                                    
  }}
    <div class="metatile">
		{{#link_detailpage}}
		<a href="{{{url}}}">
		{{/link_detailpage}}
			<div class="metatile-img" style="background-image:url({{{fileurl}}});">
				{{#starttime}}
					<div class="icon-coming-soon"></div>
				{{/starttime}}
			</div>
			<div class="metatile-content">
				<h2>{{{coursetitle}}}</h2>
				<table class="metatile-table">
					<tr>
						<td class="metatileicon iconlecturer">{{{lecturer_detail}}}:</td>
						<td>{{{lecturer}}}</td>
					</tr>
					<tr>
						<td class="metatileicon iconuni">{{{university_detail}}}:</td>
						<td>{{{uni}}}</td>
					</tr>
					<tr>
						<td class="metatileicon iconcourselanguage">{{{courselanguage_detail}}}:</td>
						<td>{{{language}}}</td>
					</tr>
					<tr>
						<td class="metatileicon iconsubject">{{{subjectarea_detail}}}:</td>
						<td>{{{subject}}}</td>
					</tr>
					<tr>
						<td class="metatileicon iconprocessingtime">{{{avgworkload_detail}}}:</td>
						<td>{{{processingtime}}} {{{hours}}}</td>
					</tr>
					{{#starttime}}
					<tr>
						<td class="metatileicon iconstarttime">{{{starttime_detail}}}:</td>
						<td>{{{starttime}}}</td>
					</tr>
					{{/starttime}}
				</table>
			</div>
		{{#link_detailpage}}
		</a>
		{{/link_detailpage}}
	</div>